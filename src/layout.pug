//- Блок с переменными используемыми на странице
block vars
- var headTitle; //- Переменная которая хранит заголовок страницы
- var bodyClass; //- Переменная которая хранит названия класса для тега body

doctype html
html(lang="ru" class="page")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")

    //- Заголовок для каждой страницы
    title #{headTitle}

    //- Подключение минифицированного normalize файла со стилей
    link(rel="stylesheet", href="css/normalize.min.css")

    //- Подключение основного минифицировоного файла стилей
    link(rel="stylesheet", href="css/style.min.css")

    //- Подключение favicon
    <link rel="icon" href="img/icons/favicon.ico">
    <link rel="icon" href="img/icons/favicon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="img/icons/favicon.png">

block content
body(class=bodyClass)
  //- Подключение header

  //- Блок main который хранит основной контент страницы (при необходимости переопределяется)
  block main

  //- Подключение footer

  //- Подключение общего для всех страниц файла со скриптами
  script(src="js/script.min.js")

  //- Блок с подключением js файлов (при необходимости переопределяется)
  block scripts
